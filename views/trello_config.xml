<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vista del formulario -->
        <record id="view_trello_config_form" model="ir.ui.view">
            <field name="name">managechicote.trello.config.form</field>
            <field name="model">managechicote.trello.config</field>
            <field name="arch" type="xml">
                <form string="Configuración de Trello" create="false" edit="true">
                    <sheet>
                        <group name="group_top">
                            <group name="group_left">
                                <field name="api_key"/>
                                <field name="token"/>
                                <field name="board_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción para la vista -->
        <record id="action_trello_config" model="ir.actions.act_window">
            <field name="name">Configuración de Trello</field>
            <field name="res_model">managechicote.trello.config</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_trello_config_form"/>
            <field name="target">current</field>
            <field name="context">{'active_id': 1}</field> <!-- Esto asegura que siempre se cargue el registro 1 -->
        </record>

        <!-- Menú raíz -->
        <menuitem name="ManageChicote" id="menu_managechicote_root" sequence="1"/>

        <!-- Segundo nivel -->
        <menuitem name="Trello" id="menu_managechicote_trello"
                  parent="menu_managechicote_root"/>

        <!-- Tercer nivel con acción -->
        <menuitem name="Configuración de Trello" id="menu_managechicote_trello_action"
                  parent="menu_managechicote_trello" action="action_trello_config"/>
    </data>
</odoo>

